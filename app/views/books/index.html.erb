 <table>
  <tr>
    <td><h1>User info</h1></td>
  </tr>
  <tr>
    <td><%= image_tag @user.get_profile_image(100, 100) %></td>
  </tr>
  <tr>
    <td>name</td>
    <td><%= @user.name %></td>
  </tr>
  <tr>
    <td>introduction</td>
    <td><%= @user.introduction %></td>
  </tr>
</table>

<p><%= link_to edit_user_path(@user.id) %></p>

<h3>New book</h3>
<%= form_for @book do |f| %>
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
  